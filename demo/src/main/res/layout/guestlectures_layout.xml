<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"

        android:translationZ="1dp"
        card_view:cardElevation="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"


            android:background="#E6ffde00"


            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:orientation="horizontal"

                android:layout_weight="1"



                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="15dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="Guest Lectures"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"

                    />




            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:layout_gravity="center_vertical"
                android:text="In its pursuit to achieve this grail of technical knowledge dissemination, the IET DTU chapter provides for various Guest Lectures by eminent personalities throughout the year to keep the university students enlightened with the burning topics of the present world.In the previous session in the month of  January with the very beginning of the 2015 , Dr.Abhishek Asthana’s lecture on “Nuclear Power Generation” was a kick-start to 2015. Dr.Asthana is a Senior Lecturer at Sheffield Hallam University in England. Over 100 students attended the expert lecture along with professionals from Ministry of Railways and Professors from our College"
                android:textSize="15dp"

                android:background="#ba68c8"
                android:textColor="#ffffff"
                android:layout_weight="4"

                />


        </LinearLayout>


    </android.support.v7.widget.CardView>



</LinearLayout>
