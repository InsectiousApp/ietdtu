<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <android.support.v7.widget.CardView
        android:layout_width="350dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="190dp"

        android:translationZ="2dp"
        card_view:cardElevation="9dp"
        >


        <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent"
         android:background="@drawable/myrect"
        android:id="@+id/rlcardview">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:paddingTop="12dp"
            android:paddingLeft="5dp"
            android:id="@+id/iv_carview"
            android:src="@drawable/chetan_crop"

            />

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingLeft="10dp"

            android:gravity="left|top"

            android:id="@+id/list_data_ll"

            android:layout_below="@+id/list_data_tv_rank"
            android:layout_alignBottom="@+id/iv_carview"
            android:layout_alignLeft="@+id/list_data_tv_rank"
            android:layout_alignStart="@+id/list_data_tv_rank">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Name"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:id="@+id/list_data_tv"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="mail_id"
                android:textSize="13dp"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:id="@+id/list_data_tv_mail"
                />


        </LinearLayout>>

            <TextView
                android:layout_width="175dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:text="Council Head"
                android:background="@drawable/myrect2"
                android:paddingTop="0dp"
                android:textSize="16dp"
                android:paddingLeft="10dp"
                android:textColor="#ffffff"
                android:gravity="center"


                android:id="@+id/list_data_tv_rank"

                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>



</LinearLayout>
