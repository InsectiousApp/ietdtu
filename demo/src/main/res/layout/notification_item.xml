<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_gravity="center_horizontal"
    android:layout_height="wrap_content"

    android:translationZ="2dp"
    card_view:cardElevation="9dp"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"


            android:background="#E61976D2"
            android:id="@+id/notification_tvs"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:orientation="horizontal"

            android:layout_weight="1"

            android:id="@+id/notification_dateandtime"

            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"

                android:layout_weight="1"
                android:text="Date"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:id="@+id/tv_notification_date"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="25dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:gravity="center_vertical|right"
                android:layout_weight="1"
                android:text="Time"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:id="@+id/tv_notification_time"
                />


        </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:layout_gravity="center_vertical"
                android:text="Notification Notification Notification Notification asddf"
                android:textSize="13dp"
                android:background="#ffffff"
                android:textColor="#000000"
                android:layout_weight="4"
                android:id="@+id/tv_notification"
                />


        </LinearLayout>


        </android.support.v7.widget.CardView>

</LinearLayout>
