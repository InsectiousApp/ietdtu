<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"

        android:translationZ="1dp"
        card_view:cardElevation="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"


            android:background="#E66599ff"


            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:orientation="horizontal"

                android:layout_weight="1"



                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="15dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="Workshops"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"

                    />




            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="30dp"
                android:paddingBottom="10dp"
                android:layout_gravity="center_vertical"
                android:text="One of the major temptations offered by IET DTU student chapter is the various workshops and industrial visits organized by it all through the year. During the academic session 2014-15, a number of workshops were organized which were helpful for students of all branches. Weekly workshops were conducted by IET seniors as well as industry professionals on topics like robotics, coding, pspice, design and photoshop, eagle cad. Practical demonstrations were also given along with the theoretical information."
                android:textSize="15dp"

                android:background="#ba68c8"
                android:textColor="#ffffff"
                android:layout_weight="4"

                />


        </LinearLayout>


    </android.support.v7.widget.CardView>



</LinearLayout>
