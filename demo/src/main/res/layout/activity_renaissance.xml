<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingTop="10dp"
    android:id="@+id/movingimage_relativelayout"
    android:background="@drawable/ren3final"
    tools:context="br.liveo.ndrawer.ui.activity.Renaissance">






    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"

        android:padding="20dp"

        android:textSize="24dp"
        android:gravity="center_horizontal|top"
        android:background="#337B1FA2"
        android:id="@+id/tv_rena"

        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"

        android:orientation="vertical"

        >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:text="Renaissance is the annual techno management fest of the IET DTU Student Chapter. It's a three day extravaganza oragnised every year during the univerisit's tech fest in the even semester. It offers many technical and non tech events which inlcudes these six grandiose events :"

            android:layout_weight="4"

            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:textScaleX="1"
            android:textSize="26dp"
            android:gravity="center_horizontal"

            android:id="@+id/tv_renaissance"

            />


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:id="@+id/tv_renaissance2"
            android:gravity="center"
            android:lineSpacingExtra="10dp"
            android:textSize="24dp"
            android:text=" Electrify                                Brain Warz                      Source Code              Robotiquette              Bricks N Gears       Brainwars"

            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:id="@+id/tv_renaissance3"
            android:paddingLeft="10dp"
            android:textScaleX="1"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:textSize="26dp"
            android:text="Renaissance also offer online events which commence a week earlier than the commencement of fest in the university. These online events inlcude “Pixel-R”, An Online Photography Contest &amp;“Beat”, An Online Treasure hunt.
Not to forget, the splendid post-fest celebration which neutralise the incessant toil and exertion."

            />

    </LinearLayout>




</FrameLayout>
